#include<iostream>
using namespace std;
int main()
{
    int n1,n2,x;
    cin>>n1>>n2>>x;
    if(n1>n2)
    {
        cout<<"-1";
    }
    else{
        int car1=x;
        int car2=0;
        int c=0;
        while(car1>=car2)
        {
            c++;
            car1=car1+n1;
            car2=car2+n2;
        }
        cout<<c;
    }
}
