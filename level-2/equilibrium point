#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    vector<int>v;
    int sume=arr[0];
    v.push_back(sume);
    for(int i=1;i<n;i++)
    {
        sume=sume+arr[i];
        v.push_back(sume);
    }
    if(n==1)
    {
        cout<<"1";
    }
    else if(n>=3)
    {
        for(int i=1;i<n-1;i++)
        {
            int lsum=v[i]-arr[i];
            int rsum=v[v.size()-1]-v[i];
            if(lsum==rsum)
            {
                cout<<i+1;
                break;
            }
        }
    }
}
